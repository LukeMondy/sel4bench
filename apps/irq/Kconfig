config APP_IRQBENCH
    bool "IRQ benchmarks"
    depends on APP_SEL4BENCH
    default n
    depends on LIB_SEL4 && HAVE_LIBC && LIB_SEL4_ALLOCMAN && LIB_UTILS && LIB_SEL4_UTILS && \
    LIB_SEL4_BENCH && LIB_ELF && LIB_SEL4_SIMPLE && LIB_SEL4_VKA && LIB_SEL4_MUSLC_SYS && \
    LIB_SEL4_PLAT_SUPPORT && LIB_PLATSUPPORT && LIB_SEL4_BENCHSUPPORT
    depends on DANGEROUS_CODE_INJECTION || EXPORT_PMU_USER
    help
        Application to benchmark seL4 IRQs from inside the kernel. 
        Requires tracepoints (see irq-tracepoint branch or kernel.

